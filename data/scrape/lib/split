#!/bin/bash

main {
    # SPLIT URD
    python data/scrape/lib/split.py \
    --infile=data/scrape/tsv/abjad/urd/urd_gold.tsv --language=urd
    # SPLIT FAS
    python python data/scrape/lib/split.py \
    --infile=data/scrape/tsv/abjad/fas/fas_gold.tsv --language=fas
    # SPLIT ARA
    python data/scrape/lib/split.py \
    --infile=data/scrape/tsv/abjad/ara/ara_gold.tsv --language=ara
    # SPLIT PUS
    # python data/scrape/lib/split.py \
    # --infile=data/scrape/tsv/abjad/ara/ara_gold.tsv --language=ara
    # SPLIT BUL
    python data/scrape/lib/split.py \
    --infile=data/scrape/tsv/cyrillic/bul/raw/bul.tsv --language=bul -dedupe=y
    # SPLIT HBS
    python data/scrape/lib/split.py \
    --infile=data/scrape/tsv/cyrillic/hbs/raw/hbs.tsv --language=hbs -dedupe=y
    # SPLIT MKD
    python data/scrape/lib/split.py \
    --infile=data/scrape/tsv/cyrillic/mkd/raw/mkd.tsv --language=mkd -dedupe=y
    # SPLIT RUS
    python data/scrape/lib/split.py \
    --infile=data/scrape/tsv/cyrillic/rus/raw/rus.tsv --language=rus -dedupe=y
    # SPLIT UKR
    python data/scrape/lib/split.py \
    --infile=data/scrape/tsv/cyrillic/ukr/raw/ukr.tsv --language=ukr -dedupe=y
    # SPLIT ENG
    python data/scrape/lib/split.py \
    --infile=data/scrape/tsv/latin/eng/raw/eng.tsv --language=eng -dedupe=y
    # SPLIT GLE
    python data/scrape/lib/split.py \
    --infile=data/scrape/tsv/latin/gle/raw/gle.tsv --language=gle -dedupe=y
    # SPLIT IND
    python data/scrape/lib/split.py \
    --infile=data/scrape/tsv/latin/ind/raw/ind.tsv --language=ind -dedupe=y
    # SPLIT SPA
    python data/scrape/lib/split.py \
    --infile=data/scrape/tsv/latin/spa/raw/spa.tsv --language=spa -dedupe=y
    # SPLIT TGL
    python data/scrape/lib/split.py \
    --infile=data/scrape/tsv/latin/tgl/raw/tgl.tsv --language=tgl -dedupe=y
}

main